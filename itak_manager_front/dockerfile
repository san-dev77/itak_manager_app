# ----- BUILD -----
    FROM node:20 AS builder

    WORKDIR /app
    COPY package*.json ./
    RUN npm install -g typescript

    RUN npm install
    
    COPY . .
    RUN npm run build
    
    # ----- SERVE WITH NGINX -----
    FROM nginx:stable-alpine
    
    COPY --from=builder /app/dist /usr/share/nginx/html
    COPY nginx.conf /etc/nginx/conf.d/default.conf
    
    EXPOSE 80
    CMD ["nginx", "-g", "daemon off;"]
    